{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"declaration": true,
		"declarationDir": "build",
		"outDir": "build",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react-jsx"
	},
	"include": [
		"mock",
		"utils",
		"webpack",
		"yarn"
	],
	"exclude": ["**/__test__/**/*"]
}
